<div class="container">
  <header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
        <% if !user_signed_in? %>
          <%= link_to 'Log in', new_user_session_path, class: 'btn btn-sm btn-outline-secondary mr-2' %>
        <% end %>
      </div>
      <div class="col-4 text-center">
        <%= link_to 'MOVIE', root_path, class: 'blog-header-logo text-dark' %>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <% if !user_signed_in? %>
          <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-sm btn-outline-secondary' %>
        <% elsif user_signed_in? %>
          <%= link_to 'Log out', destroy_user_session_path, class: 'btn btn-sm btn-danger', method: :delete %>
        <% end %>
      </div>
    </div>
  </header>

  <div class="nav-scroller py-1 mb-4">
    <nav class="nav d-flex justify-content-between">
      <%= active_link_to 'Explore MoviesJs', root_path, active: :exclusive, class: 'p-2 text-muted' %>
      <% if user_signed_in? %>
        <%= active_link_to 'Your MoviesJs', own_movies_path, active: :exclusive, class: 'p-2 text-muted' %>
        <%= active_link_to 'New Movie', new_movie_path, active: :exclusive, class: 'p-2 text-muted' %>
        <%= active_link_to 'New Category', new_category_path, active: :exclusive, class: 'p-2 text-muted' %>
      <% end %>
    </nav>
  </div>
</div>