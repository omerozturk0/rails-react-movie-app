<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>

  <h1 class="h3 mb-3 font-weight-normal">Log in</h1>

  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger" role="alert"><%= alert %></div>
  <% end %>

  <div class="form-inputs">
    <%= f.input_field :email,
                      required: false,
                      autofocus: true,
                      class: "form-control",
                      placeholder: "Email address",
                      autocomplete: "email" %>
    <%= f.input_field :password,
                      required: false,
                      class: "form-control",
                      placeholder: "Password",
                      autocomplete: "current-password" %>
    <%= f.input :remember_me, as: :boolean, wrapper_html: { class: 'mt-2 text-left' } if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-lg btn-primary btn-block' %>
  </div>

  <div class="shared-links text-left mt-2">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
